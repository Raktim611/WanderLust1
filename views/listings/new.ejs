<% layout("/Layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-3">

    <h3>Create a new listing</h3>
    
    <form method="POST" action="/listings"  class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label" >Add a catchy Title</label>
            <input  required class="form-control" type="Text" name="listing[title]" placeholder="Enter title">
        </div>

        <div>
             <label for="description" class="form-label">Description</label>
             <textarea required class="form-control" name="listing[description]" placeholder="Enter description"></textarea>
        </div>

        <div>
            <label for="image" class="form-label" >Upload Image</label>  
            <input required class="form-control" type="file" name="listing[image]" >          
        </div>

        

        <div>
            <label for="price" class="form-label">Price</label>
            <input  required class="form-control" name="listing[price]" placeholder="1500" type="number">
        </div>
        
        <div>
            <label for="location" class="form-label">Location</label>
            <input  required class="form-control" name="listing[location]" placeholder="Digha,WestBengal" >
        </div>
        
        <div>
            <label  class="form-label" for="country" >Country</label>
            <input required class="form-control" name="listing[country]" placeholder="India">
        </div>
        
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
    </form>

    </div>
</div>