<% layout("/Layouts/boilerplate") %>

    <h3><%=listingData.title%> </h3>
    <div class="card col-8 offset-3 listing-card" style="width: 18rem;" >
        <img src="<%=listingData.image.url%>" class="card-img-top " alt="listing_image" >
        <div class="card-body" >
            
            <i>Owned By: <%=listingData.owner.username%></i>
            <br>
            <%=listingData.description%><br>
            &#8377;<%=listingData.price?listingData.price.toLocaleString("en-IN"):"N"%><br>
            <%=listingData.location%><br>
            <%=listingData.country%>
        
        
        </p>
        </div>
    </div>
   <% if(currUser && listingData.owner._id.equals(currUser._id)){%>
    <div class="btns">
    <a class="btn btn-dark col-1 offset-3 edit-btn" href="/listings/<%= listingData._id%>/edit">Edit</a>
    
    <form method="POST" action="/listings/<%=listingData._id%>?_method=DELETE">
       <button class="btn btn-dark offset-6">Delete</button> 
    </form>

    </div>
    <%}%>
    
    <hr>
    <% if(currUser){%>
    <div class="col-8 offset-3 mb-3" >
        <h4>Leave a review</h4>
        <form action="/listings/<%=listingData._id%>/review" method="POST">
           
            <div class="mb-3 mt-3">
                <label class="form-label" for="Rating">Rating</label>
            <fieldset class="starability-heart">
            
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            </div>
            <div class="mb-3 mt-3">
                <label  class="form-label" for="comment" >Comment</label>
                <textarea  required class="form-control" rows="5" cols="30" name="review[comment]" id="comment"></textarea>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
    <hr>
    <%}%>
    <h4>All ratings</h4>
   


<div class="row">
    <% for(rev of listingData.review){%>

    <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
            <h5 class="card-title"><i>Posted by: </i><%= rev.author.username%></h5>
            <p class="starability-result card-text" data-rating=<%=rev.rating%>> </p>
            <p class="card-text"><%=rev.comment%></p>
           
              
               
               
        </div>
        <form class="mb-3" method="POST" action="/listings/<%=listingData._id%>/review/<%=rev._id%>?_method=DELETE">
            <button  class="btn btn-sm btn-dark">Delete</button>
        </form>
    </div>


<%}%>
</div> 

      

